{
  "name": "windows-app-template",
  "version": "1.0.0",
  "description": "Optimized Windows application template for low-spec hardware",
  "main": "src/main.js",
  "scripts": {
    "dev": "vite --host 127.0.0.1 --port 3000",
    "build": "vite build",
    "build:x64": "npm run build && electron-builder --win --x64",
    "build:x86": "npm run build && electron-builder --win --ia32",
    "package:x64": "npm run build:x64 -- --publish=never",
    "package:x86": "npm run build:x86 -- --publish=never",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .js,.ts,.jsx,.tsx",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.example.app",
    "productName": "Windows App",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0"
  },
  "dependencies": {
    "electron-updater": "^6.0.0"
  }
}